<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <Nullable>enable</Nullable>
        <Title>FracturedJson</Title>
        <Description>A library for formatting JSON, producing user-readable but compact output.</Description>
        <Copyright>2021 Jesse Brooke</Copyright>
        <PackageProjectUrl>https://j-brooke.github.io/FracturedJson/</PackageProjectUrl>
        <RepositoryUrl>https://github.com/j-brooke/FracturedJson</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryType>git</RepositoryType>
        <AssemblyVersion>2.2.0</AssemblyVersion>
        <PackageTags>JSON formatter pretty printer beautifier</PackageTags>
        <PackageVersion>2.2.0</PackageVersion>
        <PackageIcon>packageIcon.png</PackageIcon>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile></DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="packageIcon.png" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Wcwidth" Version="0.4.0" />
    </ItemGroup>
</Project>
