<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <Nullable>enable</Nullable>
        <Title>FracturedJson</Title>
        <Description>A library for formatting JSON in a user-readable but compact way.</Description>
        <Copyright>2020 Jesse Brooke</Copyright>
        <PackageProjectUrl>https://j-brooke.github.io/FracturedJson/</PackageProjectUrl>
        <RepositoryUrl>https://github.com/j-brooke/FracturedJson</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryType>git</RepositoryType>
        <AssemblyVersion>1.0.2</AssemblyVersion>
        <PackageTags>JSON formatter pretty printer beautifier</PackageTags>
        <PackageVersion>1.0.2</PackageVersion>
        <PackageIcon>packageIcon.png</PackageIcon>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile></DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="packageIcon.png" Pack="true" PackagePath=""/>
    </ItemGroup>
</Project>
